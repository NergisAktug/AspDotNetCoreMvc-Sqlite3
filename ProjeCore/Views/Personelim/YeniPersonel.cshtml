@model ProjeCore.Models.Personel
@{
    ViewData["Title"] = "YeniPersonel";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<form class="form-group" method="post">

    <b>Personel Adı</b><!--Veri tabanında label olarak birsey cekmek icin kullanılır@Html.LabelFor(x=>x.Departmanad)-->
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <b>Personel Soyadı</b><!--Veri tabanında label olarak birsey cekmek icin kullanılır@Html.LabelFor(x=>x.Departmanad)-->
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    <b> Şehir</b><!--Veri tabanında label olarak birsey cekmek icin kullanılır@Html.LabelFor(x=>x.Departmanad)-->
    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
    <br />
    <b>Birim</b><!--Veri tabanında label olarak birsey cekmek icin kullanılır@Html.LabelFor(x=>x.Departmanad)-->
   @Html.DropDownListFor(x=>x.Birim.BirimId,(List<SelectListItem>)ViewBag.dgr, new {@class="form-control"})
    <br />
    <button class="btn btn-info">Personel  Ekle</button>
</form>

